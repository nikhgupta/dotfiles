XDG_USER_HOME="$HOME"
XDG_CACHE_HOME="$HOME/.cache"
XDG_CONFIG_HOME="$HOME/.config"

XDG_ONEDRIVE_BACKUP_DIR="$XDG_ONEDRIVE_DIR/Backup"
