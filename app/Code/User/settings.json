{
  "vsicons.dontShowNewVersionMessage": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Nord",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback','Font Awesome 5 Free', 'Font Awesome 5 Brands','FontAwesome'",
  "vim.useCtrlKeys": true,
  "window.titleBarStyle": "native",
  // "window.menuBarVisibility": "toggle",
  "customizeUI.titleBar": "inline",
  "customizeUI.activityBar": "wide",
  "customizeUI.moveStatusbar": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "redhat.telemetry.enabled": false,
  "files.associations": {
    "skhdrc": "editorconfig",
    "*.toml": "toml"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.format.semicolons": "insert",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",
  "javascript.preferences.quoteStyle": "double",
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.suggest.paths": true,
  // "javascript.suggestionActions.enabled": false,
  "prettier.printWidth": 120,
  "prettier.enable": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "appguru.luafmt"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.venvFolders": [".venv"],
  "python.languageServer": "Pylance",
  "python.venvPath": "~/.venv",
  "python.terminal.activateEnvInCurrentTerminal": true,
  // "python.showStartPage": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  "[gemfile]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  "ruby.format": "rubocop",
  "ruby.codeCompletion": "rcodetools",
  "ruby.rubocop.onSave": true,
  "ruby.rubocop.useBundler": true,
  "solargraph.useBundler": true,
  "ruby.rubocop.suppressRubocopWarnings": true,
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },
  "vscode-erb-beautify.keepBlankLines": 1,
  "vscode-erb-beautify.tabStops": 4,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "solargraph.diagnostics": true,
  "terminal.integrated.fontSize": 14,
  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "security.workspace.trust.untrustedFiles": "open",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnknownArgumentType": "information",
    "reportUnknownMemberType": "none",
    "reportUnknownParameterType": "information",
    "reportUnknownVariableType": "information",
    "reportMissingTypeStubs": "none",
    "reportUnusedImport": "information",
    "reportImportCycles": "information"
  },
  "files.exclude": {
    "**/__pycache__/": true,
    "**/.vscode/": true
  },
  "search.exclude": {
    "**/{tag,TAG,tags,TAGS}": true
  },
  "window.zoomLevel": 2
}
