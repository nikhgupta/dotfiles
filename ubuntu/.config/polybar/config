;----------------------------------------------------------
; COLORS
;----------------------------------------------------------
[colors]
transparent = #00000000

yellow = #ffb52a
pink = #e60053
blue = #20a4f3
green = #5FAD56
black = #000000
white = #FFFFFF
cream = #E4FDE1
gray  = #85888f
lightgray = #5A000000
darkgray = #88000000

primary = ${colors.yellow}
secondary = ${colors.green}
tertiary = ${colors.blue}
alert = ${colors.pink}
urgent = ${colors.pink}
highlighted = ${colors.blue}
dimmed = ${colors.gray}

foreground = ${colors.white}
foreground-alt = ${colors.dimmed}
background = ${colors.lightgray}
background-alt = ${colors.gray}
background-highlighted = ${colors.darkgray}

;----------------------------------------------------------
; BAR/TOP
;----------------------------------------------------------
[bar/top]
; monitor = ${env:MONITOR:DVI-I-0}
width = 100%
height = 27
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 2

font-0 = Fira Code:size=10:style=Regular;3
font-1 = FontAwesome:pixelsize=11;3
font-2 = feather:pixelsize=11;3

modules-left = bspwm
modules-center = window sep screencast screenshot
modules-right = filesystem cpu ram temp network battery vol date wallpaper power

;cursor-click = pointer
;cursor-scroll = ns-resize

underline-size = 2
underline-color = ${colors.primary}

;----------------------------------------------------------
; BAR/BOTTOM
;----------------------------------------------------------
