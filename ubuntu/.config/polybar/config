font-2 = feather:pixelsize=11;3

modules-left = launcher uptime sep bitcoin
modules-center = browser mail file terminal editor social weechat sep lixo pavu mpd
modules-right = pub-ip networkspeed refresh cron2m

tray-position = right
;tray-padding = 1
;tray-detached = true

