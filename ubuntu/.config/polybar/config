;----------------------------------------------------------
; NETWORK
;----------------------------------------------------------
[module/network]
type = internal/network
interface = wlp7s0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "
format-disconnected-prefix = " "
format-connected-underline = ${colors.green}
format-disconnected-underline = ${colors.pink}

;label-connected = %signal:3%% %{F#F1F1F1} %{F-}%downspeed:5% %{F#F1F1F1} %{F-}%upspeed:5%
;label-connected = %local_ip%  %downspeed%  %upspeed%
;label-connected =  %downspeed%  %upspeed%
label-connected = %essid::10:..%
label-disconnected = down

[module/networkspeed]
type = internal/network
interface = wlp7s0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

;label-connected = %signal:3%% %{F#F1F1F1} %{F-}%downspeed:5% %{F#F1F1F1} %{F-}%upspeed:5%
;label-connected = %local_ip%  %downspeed%  %upspeed%
;label-connected =  %downspeed%  %upspeed%
label-connected = %{F#e60053} %{F-}%downspeed% %{F#5FAD56} %{F-}%upspeed%
label-disconnected =
;----------------------------------------------------------
; Temperature
;----------------------------------------------------------
[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
units = false

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.pink}
format-warn-foreground = ${colors.pink}

label = %temperature-c%
label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 

;----------------------------------------------------------
; BATTERY
;----------------------------------------------------------
