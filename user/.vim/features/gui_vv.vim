if g:is_vv
  VVset windowtop=0
  VVset windowleft=0

  VVset fullscreen=1
  VVset simplefullscreen=1

  VVset fontsize=16
  VVset lineheight=1.25
  VVset fontfamily=FiraCode,\ Menlo,\ Courier\ New,\ monospace.

  VVset reloadchanged=0
  VVset quitoncloselastwindow=1

  set guifont=FiraCode-Regular:h16
endif

